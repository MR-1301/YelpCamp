<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%= currCampground.image %>" class="card-img-top" alt="No image found">
            <div class="card-body">
                <h5 class="card-title"><%= currCampground.title %></h5>
                <p class="card-text"><%= currCampground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= currCampground.location %></li>
                <li class="list-group-item">$<%= currCampground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= currCampground._id %>/edit" class="card-link btn btn-primary">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=currCampground._id%>?_method=DELETE" method="POST">
                    <button class="card-link btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <div class="mt-3 text-center">
        <button class="btn btn-dark" onclick="location.href='/campgrounds'">Go to All Campgrounds</button>
    </div>
</div>
