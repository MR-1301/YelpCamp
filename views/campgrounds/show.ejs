<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img
        src="<%= currCampground.image %>"
        class="card-img-top"
        alt="No image found"
      />
      <div class="card-body">
        <h5 class="card-title"><%= currCampground.title %></h5>
        <p class="card-text"><%= currCampground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= currCampground.location %>
        </li>
        <li class="list-group-item">$<%= currCampground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a
          href="/campgrounds/<%= currCampground._id %>/edit"
          class="card-link btn btn-primary"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=currCampground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="card-link btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>

  <div class="col-6">
    <h2>Leave a Review:</h2>
    <form
      action="/campgrounds/<%= currCampground._id %>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review:</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!!</div>
      </div>

      <button class="btn btn-success">Submit</button>
    </form>

    <% for(let x of currCampground.reviews) {%>
    <div class="mb-3 card">
      <div class="card-body">
        <p>Rating: <%= x.rating %></p>
        <p>Review: <%= x.body %></p>
        <form
          class="d-inline"
          action="/campgrounds/<%=currCampground._id%>/reviews/<%= x._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
