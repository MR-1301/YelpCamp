<% layout('layouts/boilerplate') %> 
        <h1>Add New Campground</h1>
        <br>
        <form action="/campgrounds" method="POST">
            <label for="title">Title: </label>    
            <input type="text" name="campground[title]" id="title" placeholder="enter title..">
            <br><br>
            <label for="location">Location:</label>
            <input type="text" name="campground[location]" id="location" placeholder="enter location..">

            <button>Add</button>
        </form>
        <br><br>
        <button onclick="location.href='/campgrounds'">Go Back to All Campground</button>
        
