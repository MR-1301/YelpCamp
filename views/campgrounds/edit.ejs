<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class=text-center>Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=currInfo._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-lable" for="title">Title: </label>    
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="enter title.." value="<%= currInfo.title %>">
            </div>

            <div class="mb-3">
                <label class="form-lable" for="location">Location:</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="enter location.." value="<%= currInfo.location %>">
            </div>

            <div class="mb-3">
                <label class="form-lable" for="image">Image URL:</label>
                <input class="form-control" type="text" name="campground[image]" id="image" placeholder="enter image url.." value="<%= currInfo.image %>">
            </div>

            <div class="mb-3">
                 <label class="form-lable" for="price">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" placeholder="0.00" name="campground[price]" aria-label="price" aria-describedby="price-label" value="<%= currInfo.price %>" >
                </div>  
            </div>

            <div class="mb-3">
                <label class="form-lable" for="description">Description:</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="enter description.."><%= currInfo.description %></textarea>
            </div>

                

            <div class="mb-3">
                <button class="btn btn-info">Edit Campground</button>
            </div>
        </form>
        
            
        <div class="mb-3">
            <button class="btn btn-secondary" onclick="location.href='/campgrounds/<%= currInfo.id %>'">Cancel Edit</button>
        </div>
        <button class="btn btn-dark" onclick="location.href='/campgrounds'">Go Back to All Campground</button>
    </div>
</div>
